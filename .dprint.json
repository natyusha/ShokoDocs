{
  "plugins": ["https://plugins.dprint.dev/g-plane/markup_fmt-v0.18.0.wasm"],
  "includes": ["**/*.vue"],
  "markup": {
    "associations": ["**/*.vue"],
    "printWidth": 120,
    "useTabs": false,
    "indentWidth": 2,
    "lineBreak": "lf",
    "quotes": "double",
    "formatComments": false,
    "scriptIndent": false,
    "styleIndent": false,
    "closingBracketSameLine": false,
    "closingTagLineBreakForEmpty": "fit",
    "preferAttrsSingleLine": false,
    "whitespaceSensitivity": "css",
    "doctypeKeywordCase": "upper",
    "strictSvelteAttr": false,
    "scriptFormatter": "dprint",
    "ignoreCommentDirective": "markup-fmt-ignore",
    "ignoreFileCommentDirective": "dprint-ignore-file"
  }
}
